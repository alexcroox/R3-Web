.tooltip
    position absolute
    width:140px;
    color #FFFFFF
    background #000000
    height 30px
    line-height 30px
    text-align center
    visibility hidden
    border-radius 6px

.tooltip:after
    content ''
    position absolute
    top 50%
    right 100%
    margin-top -8px
    width 0; height 0
    border-right 8px solid #000000
    border-top 8px solid transparent
    border-bottom 8px solid transparent

.tooltip__trigger:hover .tooltip
    visibility visible
    opacity 0.8
    left 100%
    top 50%
    margin-top -15px
    margin-left 15px
    z-index 999

